<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    tools:context="com.patrick.whereisthat.level.LevelActivity"

    >

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <!--<TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" /> -->

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        map:mapType="normal"
        tools:context="com.example.patrick.mapapp.MapsActivity" />

    <ImageView
        android:id="@+id/image_view_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignEnd="@+id/image_view_db"
        android:src="@drawable/ic_settings_24dp"
        android:visibility="invisible"
      />
    <ImageView
        android:id="@+id/image_view_db"
        android:layout_margin="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hint"
        />
    <TextView
        android:id="@+id/text_view_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/button_hint"
        android:text="00:00"
        android:layout_margin="8dp"
        android:padding="8dp"
        />

    <TextView
        android:id="@+id/text_view_score"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:text="Score:0"
        android:layout_toRightOf="@+id/text_view_timer"/>

    <ImageView
        android:id="@+id/image_view_hint"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_settings_24dp"
        android:layout_below="@+id/button_hint"
        android:layout_margin="8dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/text_view_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_hint"
        tools:text="Heend"/>

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_hint"
        android:text="Confirm"

        />


    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">


        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
